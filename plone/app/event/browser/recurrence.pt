<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">

<head>
    <title></title>
</head>

<body>

    <!-- Selection Widgets -->

    <metal:view_macro define-macro="view"
            tal:define="kssClassesView context/@@kss_field_decorator_view;
                        getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;">
        <span metal:define-macro="selection-field-view"
            tal:define="kss_class python:getKssClasses(fieldName,
                              templateId='widgets/selection', macro='selection-field-view');"
            tal:attributes="class kss_class;
                            id string:parent-fieldname-$fieldName">
            <span metal:define-slot="inside"
                tal:define="vocab python:field.Vocabulary(context);
                            value python:accessor();
                            display python:context.displayValue(vocab, value)"
                tal:replace="structure display" />
        </span>
    </metal:view_macro>

    <metal:define define-macro="edit">
        <metal:use use-macro="field_macro|context/widgets/field/macros/edit">

            <metal:fill fill-slot="widget_body"
                        tal:define="vocab widget/recurrencevoc;
                                    selection string:">


                    <!-- Pulldown when longer -->
                    <select tal:attributes="name string:${fieldName}-freq;
                                            id string:${fieldName}-freq;">

                        <option tal:repeat="item vocab"
                                tal:attributes="value item/token;
                                                selected python:item.token in selection and 'selected' or None"
                                tal:content="item/title"
                                i18n:translate=""
                                />

                    </select>


                     <input class="calendarInput" type="text" value="" 
                            tal:attributes="name  string:${fieldName}-until; 
                                            id    string:${fieldName}-until;
                                            value string:" /> 

            </metal:fill>

        </metal:use>

    </metal:define>

    <div metal:define-macro="search">
        <div metal:use-macro="context/widgets/selection/macros/edit" />
    </div>

</body>

</html>
